<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_app_color_d1">

    <ImageButton
        android:id="@+id/schedule_color_image_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/default_app_color_bl3"/>

    <TextView
        android:id="@+id/project_name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="프로젝트 이름"
        android:textSize="24dp"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/dialog_background"
        android:backgroundTint="@color/default_app_color_bl3"
        app:layout_constraintTop_toTopOf="@id/schedule_color_image_button"
        app:layout_constraintStart_toEndOf="@id/schedule_color_image_button"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/schedule_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="일정 제목"
        android:textSize="24dp"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/dialog_background"
        android:backgroundTint="@color/default_app_color_bl3"
        app:layout_constraintTop_toBottomOf="@id/project_name_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/time_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="시간"
        android:textSize="24dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/dialog_background"
        android:backgroundTint="@color/default_app_color_bl3"
        app:layout_constraintTop_toBottomOf="@id/schedule_name_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/schedule_content_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="일정 내용"
        android:textSize="24dp"
        android:padding="10dp"
        android:gravity="top"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/dialog_background"
        android:backgroundTint="@color/default_app_color_bl3"
        app:layout_constraintTop_toBottomOf="@id/time_textview"
        app:layout_constraintBottom_toTopOf="@id/finish_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/finish_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="12dp"
        android:backgroundTint="@color/default_app_color_b2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>