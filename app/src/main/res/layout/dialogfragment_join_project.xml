<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_background_padding2"
    android:backgroundTint="@color/default_app_color_d1"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/dialog_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="프로젝트 이름"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/member_count_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서버인원"
        android:textColor="@color/default_app_color_bl1"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/dialog_title_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/join_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/member_count_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="참여하기"
        android:textSize="16sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>