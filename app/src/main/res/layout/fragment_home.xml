<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/leftContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.2"
        android:background="@color/default_app_color_d1">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_background" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/server_list_recyclerview"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/leftContainer"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/top_section"
            android:name="com.example.teamnovapersonalprojectprojecting.ui.home.TopSectionFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/default_app_color_b1"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/server_item_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/top_section"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/default_app_color_b1"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>